<assembly>
    <id>frequentis-cats-home</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/automation/</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
       <fileSet>
            <directory>${project.build.directory}/automation/resources/.frequentis-cats</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <cats>
        <agentOutputDirectory>agents</agentOutputDirectory>
        <pluginOutputDirectory>plugins</pluginOutputDirectory>
    </cats>
</assembly>
