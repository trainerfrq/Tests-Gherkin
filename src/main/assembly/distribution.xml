<assembly>
    <id>distribution</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/${project.artifactId}/${project.version}/lib</outputDirectory>
            <excludes>
                <exclude>${project.groupId}:cats-platform:zip</exclude>
            </excludes>
            <unpack>false</unpack>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${project.artifactId}/${project.version}/lib</outputDirectory>
            <includes>
                <include>${project.groupId}:cats-platform:zip</include>
            </includes>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>
</assembly>

