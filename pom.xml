                    <version>${maven-gmavenplus-plugin.version}</version>
                </plugin>
               <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
               <artifactId>maven-resources-plugin</artifactId>
               <version>${maven.resources.plugin.version}</version>
               </plugin>
               <plugin>
