    <profiles>
        <profile>
            <id>doclint-java8-disable</id>
            <activation>
                <jdk>[1.8,)</jdk>
            </activation>
            <properties>
                <javadoc.opts>-Xdoclint:none</javadoc.opts>
            </properties>
        </profile>
        <profile>
            <id>jenkins-release</id>
            <activation>
                <property>
                    <name>catsVersion</name>
                </property>
            </activation>
            <properties>
                <cats.version>${catsVersion}</cats.version>
            </properties>
        </profile>
    </profiles>

