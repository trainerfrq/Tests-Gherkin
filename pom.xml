         <version>${websocket-lib.version}</version>

        <!-- Test dependencies -->
        </dependency>
           <dependency>
            <groupId>com.frequentis.xvp.voice</groupId>
            <artifactId>audio-simulator-service-interface</artifactId>
            <version>${audio-simulator-service.version}</version>
         </dependency>
