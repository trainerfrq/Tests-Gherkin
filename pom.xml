                <version>${cats.version}</version>
                <type>zip</type>
            </dependency>
            <dependency>
                <groupId>com.frequentis.c4i.test</groupId>
                <artifactId>cats-utils</artifactId>
                <version>${cats.version}</version>
            </dependency>
            <dependency>
                <groupId>com.frequentis.c4i.test</groupId>
                <artifactId>cats-platform</artifactId>
                <version>${cats.version}</version>
                <type>zip</type>
            </dependency>
            <dependency>
                <groupId>com.frequentis.c4i.test</groupId>
                <artifactId>cats-plugin-api</artifactId>
                <version>${cats.version}</version>
            </dependency>
            <dependency>
                <groupId>com.frequentis.c4i.test</groupId>
                <artifactId>cats-report-resources</artifactId>
                <version>${cats.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>com.frequentis.c4i.test</groupId>
